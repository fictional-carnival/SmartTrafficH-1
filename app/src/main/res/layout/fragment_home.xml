<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pieChart"
        android:layout_width="match_parent"
        android:layout_height="180dp"/>

    <View
        android:background="@color/grey_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <LinearLayout
        android:id="@+id/ll_weather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="630dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/today_temp"
                android:text="今日天气 18°"
                android:gravity="center"
                android:textSize="25dp"
                android:textColor="@color/Black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/today_img"
                    android:src="@mipmap/sun"
                    android:layout_width="@dimen/margin_50"
                    android:layout_height="@dimen/margin_50"/>

                <TextView
                    android:id="@+id/today_weather"
                    android:text="晴"
                    android:textSize="25dp"
                    android:textColor="@color/Black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:background="@color/grey_line"
            android:layout_width="2dp"
            android:layout_height="70dp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="630dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tom_temp"
                android:text="明日天气 18~25°"
                android:gravity="center"
                android:textSize="25dp"
                android:textColor="@color/Black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/tom_img"
                    android:src="@mipmap/sun"
                    android:layout_width="@dimen/margin_50"
                    android:layout_height="@dimen/margin_50"/>

                <TextView
                    android:id="@+id/tom_weather"
                    android:text="晴"
                    android:textSize="25dp"
                    android:textColor="@color/Black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:background="@color/grey_line"
        android:layout_width="match_parent"
        android:layout_height="13dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="315dp"
            android:layout_height="80dp"
            android:gravity="center">

            <TextView
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="紫外线指数"
                android:textColor="@color/Black"
                android:textSize="30dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tv_1"
                android:text="弱"
                android:textColor="@color/Red"
                android:textSize="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

        <View
            android:background="@color/grey_line"
            android:layout_width="2dp"
            android:layout_height="70dp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="310dp"
            android:layout_height="80dp"
            android:gravity="center">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="运动指数"
                android:textColor="@color/Black"
                android:textSize="30dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tv_2"
                android:text="弱"
                android:textColor="@color/Red"
                android:textSize="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

        <View
            android:background="@color/grey_line"
            android:layout_width="2dp"
            android:layout_height="70dp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="315dp"
            android:layout_height="80dp"
            android:gravity="center">

            <TextView
                android:layout_width="220dp"
                android:layout_height="37dp"
                android:gravity="center"
                android:text="穿衣指数"
                android:textColor="@color/Black"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/tv_3"
                android:text="弱"
                android:textColor="@color/Red"
                android:textSize="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

        <View
            android:background="@color/grey_line"
            android:layout_width="2dp"
            android:layout_height="70dp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="80dp"
            android:gravity="center">

            <TextView
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:text="感冒指数"
                android:textColor="@color/Black"
                android:textSize="30dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tv_4"
                android:text="少发"
                android:textColor="@color/Red"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

    </LinearLayout>

    <View
        android:background="@color/grey_line"
        android:layout_width="match_parent"
        android:layout_height="13dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_subway"
            android:layout_width="630dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

                <ImageView
                    android:src="@mipmap/home_oc"
                    android:layout_width="@dimen/margin_50"
                    android:layout_height="@dimen/margin_80"/>

                <TextView
                    android:text="城市地铁"
                    android:textSize="30dp"
                    android:textColor="@color/Black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"/>

        </LinearLayout>

        <View
            android:background="@color/grey_line"
            android:layout_width="2dp"
            android:layout_height="70dp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:id="@+id/ll_pay"
            android:layout_width="630dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:src="@mipmap/home_cc"
                android:layout_width="@dimen/margin_50"
                android:layout_height="@dimen/margin_80"/>

            <TextView
                android:text="消费中心"
                android:textSize="30dp"
                android:textColor="@color/Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:background="@color/grey_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_user"
            android:layout_width="630dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:src="@mipmap/home_mc"
                android:layout_width="@dimen/margin_50"
                android:layout_height="@dimen/margin_80"/>

            <TextView
                android:text="用户中心"
                android:textSize="30dp"
                android:textColor="@color/Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

        <View
            android:background="@color/grey_line"
            android:layout_width="2dp"
            android:layout_height="70dp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:id="@+id/ll_sign"
            android:layout_width="630dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:src="@mipmap/home_dc"
                android:layout_width="@dimen/margin_50"
                android:layout_height="@dimen/margin_80"/>

            <TextView
                android:text="用户签到"
                android:textSize="30dp"
                android:textColor="@color/Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>